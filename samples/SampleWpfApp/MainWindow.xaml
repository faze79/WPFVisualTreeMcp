<Window x:Class="SampleWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="Sample WPF Application - Visual Tree Inspector Test"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="16">
            <StackPanel>
                <TextBlock Text="WPF Visual Tree Inspector"
                           FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Sample Application for Testing"
                           FontSize="14" Foreground="#CCFFFFFF"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Form -->
            <GroupBox Grid.Column="0" Header="User Information" Margin="0,0,8,0">
                <StackPanel Margin="16">
                    <TextBlock Text="Username:" Margin="0,0,0,4"/>
                    <TextBox x:Name="UserNameTextBox"
                             Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Email:" Margin="0,0,0,4"/>
                    <TextBox x:Name="EmailTextBox"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Age:" Margin="0,0,0,4"/>
                    <TextBox x:Name="AgeTextBox"
                             Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16"/>

                    <!-- Intentional binding error for testing -->
                    <TextBlock Text="Status:" Margin="0,0,0,4"/>
                    <TextBox x:Name="StatusTextBox"
                             Text="{Binding Statsu, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="This has an intentional binding error (misspelled property)"
                             Margin="0,0,0,16"/>

                    <CheckBox x:Name="IsActiveCheckBox"
                              Content="Is Active"
                              IsChecked="{Binding IsActive}"
                              Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="SubmitButton"
                                Content="Submit"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SubmitCommand}"/>
                        <Button x:Name="ClearButton"
                                Content="Clear"
                                Command="{Binding ClearCommand}"
                                Margin="4"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Right Panel: List -->
            <GroupBox Grid.Column="1" Header="Items List" Margin="8,0,0,0">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="NewItemTextBox"
                                 Text="{Binding NewItemText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 Margin="0,0,8,0"/>
                        <Button x:Name="AddItemButton"
                                Content="Add Item"
                                Command="{Binding AddItemCommand}"/>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             x:Name="ItemsListBox"
                             ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding Description}" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="RemoveItemButton"
                                Content="Remove Selected"
                                Command="{Binding RemoveItemCommand}"
                                IsEnabled="{Binding HasSelectedItem}"/>
                        <TextBlock Text="Selected: " Margin="16,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedItem.Name, FallbackValue='(none)'}"
                                   VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Footer / Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Items: " Foreground="Gray"/>
                    <TextBlock Text="{Binding Items.Count}" FontWeight="Bold"/>
                    <TextBlock Text="  |  " Foreground="LightGray"/>
                    <TextBlock Text="User: " Foreground="Gray"/>
                    <TextBlock Text="{Binding UserName, FallbackValue='(not set)'}" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="WPF Visual Tree Inspector Connected"
                           Foreground="Green"/>
            </Grid>
        </Border>
    </Grid>
</Window>
